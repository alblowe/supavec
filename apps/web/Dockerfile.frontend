# Step 1: Use Node to install and build
FROM node:20 as builder

WORKDIR /app
COPY . .

# Install all workspace dependencies (Turbo monorepo)
RUN npm install

# Build the frontend app
WORKDIR /app/apps/web
RUN npm run build

# Step 2: Serve using Node image
FROM node:20

WORKDIR /app
COPY --from=builder /app .

WORKDIR /app/apps/web
RUN npm install --omit=dev

EXPOSE 3000
CMD ["npm", "start"]
